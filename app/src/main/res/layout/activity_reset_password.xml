<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.forgetPassword.ResetPasswordActivity"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="@dimen/dp_257"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:paddingHorizontal="@dimen/dp_20"
        android:textSize="@dimen/sp_25"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_password_phrase_txt"
        android:textSize="@dimen/sp_17"
        android:paddingStart="@dimen/dp_19"
        android:paddingEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_13"
        tools:ignore="RtlSymmetry"
        android:textColor="@color/DarkGreyText"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_25">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/password_Text_field"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingVertical="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_14"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/black"
                android:textColorHint="@color/DarkGreyText"
                android:background="@drawable/edit_text_style_2"/>
            <TextView
                android:id="@+id/msg_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/dp_10"
                android:textColor="#D00707"
                android:visibility="gone"/>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/reset_password_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:text="@string/reset_password"
            android:background="@drawable/login_btn_background"
            android:textColor="@color/AllWhite"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:textAllCaps="false"

            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dp_45"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_6"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"
            android:layout_centerInParent="true"
            android:elevation="5dp"
            android:visibility="gone"
            />
    </RelativeLayout>


        </LinearLayout>




    </RelativeLayout>

</LinearLayout>