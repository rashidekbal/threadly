<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15">


        <TextView
            android:id="@+id/rec_text_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_270"
            android:minWidth="@dimen/dp_40"
            android:text="@string/deleted_msg_placeholder_text"
            android:layout_alignParentStart="true"
            android:background="@drawable/received_msg_bg"
            android:paddingHorizontal="@dimen/dp_15"
            android:textColor="@color/light_grey_text"
            android:paddingVertical="@dimen/dp_10"
            android:textStyle="italic"


            />



            <TextView
                android:id="@+id/sent_text_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/dp_270"
                android:minWidth="@dimen/dp_40"
                android:textAlignment="textEnd"
                android:text="@string/deleted_msg_placeholder_text"
                android:textColor="@color/light_grey_text"
                android:paddingVertical="@dimen/dp_10"
                android:paddingHorizontal="@dimen/dp_15"
                android:background="@drawable/received_msg_bg"
                android:layout_alignParentEnd="true"
                android:textStyle="italic"/>




</RelativeLayout>
