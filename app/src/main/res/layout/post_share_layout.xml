<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/top_radius_for_bottom_sheet"
    android:paddingHorizontal="@dimen/dp_10"

    >
    <View
        android:id="@+id/barAppearance"
        android:layout_width="@dimen/dp_50"
        android:layout_height="4dp"
        android:background="@drawable/bar_appearence"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />
    <RelativeLayout
        android:id="@+id/searchSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_below="@+id/barAppearance"
        app:layout_constraintTop_toBottomOf="@id/barAppearance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/message_send_section_bg"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/suggestUsersBtn"
            >
            <ImageView
                android:id="@+id/search_btn"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/search_inactive_icon_pale"/>
            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@android:color/transparent"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_15"
                android:hint="Search"
                android:padding="2dp"
                android:textColor="@color/light_grey_text"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/suggestUsersBtn"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/follow"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"/>
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/Users_List_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_150"
        android:visibility="visible"
        android:layout_above="@+id/extras_layout"
        android:layout_below="@id/searchSection"
        app:layout_constraintTop_toBottomOf="@id/searchSection"
        app:layout_constraintBottom_toTopOf="@id/extras_layout"
        android:layout_marginTop="@dimen/dp_10"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintBottom_toBottomOf="@id/Users_List_recyclerView"
        app:layout_constraintTop_toTopOf="@id/Users_List_recyclerView"
        app:layout_constraintStart_toStartOf="@id/Users_List_recyclerView"
        app:layout_constraintEnd_toEndOf="@id/Users_List_recyclerView"
        />
    <RelativeLayout
        android:id="@+id/extras_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/Users_List_recyclerView"
        android:elevation="@dimen/dp_10"
        >
        <LinearLayout
            android:id="@+id/Story_add_ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/circle"
                android:clipToOutline="true"
                android:src="@drawable/plus_circle_filled"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to "
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Story"
                android:textAlignment="center"
                />


        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>