<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/dp_7"
    android:paddingHorizontal="@dimen/dp_10">
    <androidx.cardview.widget.CardView
        android:id="@+id/profileHolder"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/dp_45">
        <ImageView
            android:id="@+id/User_profile"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/test_profile_real"
            android:contentDescription="@string/profilepic"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userId_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_200"
        android:layout_toEndOf="@+id/profileHolder"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        tools:text="username"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/followBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:text="@string/follow_back"
        android:textAllCaps="false"
        android:background="@drawable/curved_btn_blue"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/AllWhite"
        android:paddingHorizontal="@dimen/dp_5"
        android:elevation="4dp"
        tools:ignore="RelativeOverlap"
        android:visibility="gone"/>


</RelativeLayout>