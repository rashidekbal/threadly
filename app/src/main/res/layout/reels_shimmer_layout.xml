<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#262525">
    <RelativeLayout
        android:id="@+id/post_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        main video player -->
        <View
            android:id="@+id/videoPlayer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/profile_section"
            android:background="#262525"
            app:show_buffering="never"
            app:use_controller="false"
            android:visibility="visible"
            android:layout_marginBottom="@dimen/dp_50"/>
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/play_icon"
            android:id="@+id/play_btn"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <!--        user whose post is this -->
        <LinearLayout
            android:id="@+id/profile_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@color/light_grey_text">

            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/AllWhite"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/dp_8"
                />
        </LinearLayout>
        <!-- caption for the post-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/caption_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/AllWhite"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_5"

                />
        </LinearLayout>
        <!--        control buttons for the post-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_50">

            <!--    like btn-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_30">
                <ImageView
                    android:id="@+id/like_btn_image"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_26"
                    android:background="@color/light_grey_text"/>

            </LinearLayout>
            <!-- comment button-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_30">
                <ImageView
                    android:id="@+id/comment_btn_image"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_26"
                    android:background="@color/light_grey_text"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_30">
                <ImageView
                    android:id="@+id/share_icon_white"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_26"
                    android:background="@color/light_grey_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:id="@+id/optionDots_white"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_26"
                    android:background="@color/light_grey_text"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>