<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UploadStoryFinalFragment"
    android:background="@color/allBlack">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_720"
        android:background="@drawable/curved_big_square_box"
        android:clipToOutline="true"
        >
        <androidx.media3.ui.PlayerView
            android:background="@color/allBlack"
            android:id="@+id/videoPlayer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false"/>
        <ImageView
            android:id="@+id/image_View"
            android:background="@color/allBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/post_placeholder"
            android:clipToOutline="true"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:paddingHorizontal="@dimen/dp_10">
        <LinearLayout
            android:id="@+id/general_uploadBtn"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="3"
            android:background="@drawable/add_story_key_background"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/circle"
                android:src="@drawable/blank_profile"
                android:clipToOutline="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_story"
                android:textColor="@color/AllWhite"
                android:textSize="@dimen/sp_15"
                android:layout_marginStart="@dimen/dp_5"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_weight="3"
            android:background="@drawable/add_story_key_background"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/dp_20"
            android:paddingVertical="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="5dp">
            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:background="@drawable/circle"
                android:src="@drawable/star_circle_icon"
                android:clipToOutline="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close Friends"
                android:textColor="@color/AllWhite"
                android:textSize="@dimen/sp_14"
                android:layout_marginStart="@dimen/dp_5"/>


        </LinearLayout>

<!--        <LinearLayout-->
<!--            android:layout_width="@dimen/dp_50"-->
<!--            android:layout_height="@dimen/dp_50"-->
<!--            android:background="@drawable/circle"-->
<!--            android:gravity="center">-->
<!--            <ImageView-->
<!--                android:layout_width="@dimen/dp_28"-->
<!--                android:layout_height="@dimen/dp_20"-->
<!--                android:src="@drawable/greater_than_icon"/>-->
<!--        </LinearLayout>-->

    </LinearLayout>



</RelativeLayout>