<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_main_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/dp_10"
    android:paddingVertical="@dimen/dp_10">

        <FrameLayout
            android:id="@+id/profile_holder"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/red_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
            <LinearLayout
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="center"
                tools:ignore="UselessParent">
                <ImageView
                    android:id="@+id/userProfile_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:src="@drawable/test_profile_real"
                    android:background="@drawable/circle"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/profilepic"
                    tools:ignore="UnusedAttribute" />
            </LinearLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_250"
            android:maxLength="40"
            tools:text="SamarPreet Kaur"
            app:layout_constraintStart_toEndOf="@+id/profile_holder"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/dp_10"/>
        <TextView
            android:id="@+id/comment_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/lorem/random"
            android:maxLength="200"
            app:layout_constraintStart_toEndOf="@+id/profile_holder"
            app:layout_constraintTop_toBottomOf="@id/username_text"
            app:layout_constraintEnd_toStartOf="@+id/like_btn_image"
            android:paddingHorizontal="@dimen/dp_10"
            android:textColor="@color/black"

            tools:ignore="VisualLintLongText" />
        <ImageView
            android:id="@+id/like_btn_image"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/sp_20"
            android:src="@drawable/heart_inactive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/likes"/>
        <TextView
            android:id="@+id/likes_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="4"
            tools:text="0"
            app:layout_constraintTop_toBottomOf="@id/like_btn_image"
            app:layout_constraintStart_toEndOf="@id/comment_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/ReplyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reply"
            app:layout_constraintStart_toStartOf="@id/comment_text"
            app:layout_constraintTop_toBottomOf="@id/comment_text"

            android:textSize="@dimen/sp_12"
            android:paddingHorizontal="14dp"
            android:textColor="@color/ui_blue"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            />
    <RelativeLayout
        android:id="@+id/replies_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ReplyBtn"
        app:layout_constraintStart_toStartOf="@id/ReplyBtn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        >


        <TextView
            android:id="@+id/load_replies_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View 4 more Replies"
            android:layout_centerHorizontal="true"
            android:textColor="@color/light_grey_text"/>
    </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




