<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/dp_15"
    android:paddingHorizontal="@dimen/dp_10"
    android:background="?attr/selectableItemBackground">
    <androidx.cardview.widget.CardView
        android:id="@+id/profileHolder"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/dp_45">
        <ImageView
            android:id="@+id/User_profile"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/test_profile_real"
            android:contentDescription="@string/profilepic"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userId_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/dp_200"
        android:layout_toEndOf="@+id/profileHolder"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        tools:text="username"/>

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:orientation="horizontal"
           android:layout_centerVertical="true">
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/approveBtn"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/dp_28"
               android:text="@string/accept"
               android:textAllCaps="false"
               android:background="@drawable/curved_btn_blue"
               android:textColor="@color/AllWhite"
               android:paddingHorizontal="@dimen/dp_5"
               android:elevation="4dp"
               android:layout_marginEnd="@dimen/dp_15"
               android:visibility="gone"/>
           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/rejectBtn"
               android:layout_width="wrap_content"
               android:layout_height="@dimen/dp_28"
               android:text="@string/reject"
               android:textAllCaps="false"
               android:background="@drawable/curved_btn_danger"
               android:textColor="@color/AllWhite"
               android:paddingHorizontal="@dimen/dp_5"
               android:elevation="4dp"
               android:visibility="gone"
                />
           <TextView
               android:id="@+id/actionTakenTextView"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:text="approved"
               android:textAlignment="center"
               android:textColor="@color/black"
               android:layout_marginEnd="@dimen/dp_10"
               />

       </LinearLayout>

</RelativeLayout>