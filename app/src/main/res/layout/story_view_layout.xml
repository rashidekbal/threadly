<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/allBlack"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/controller_layout">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/progressBar">
            <View
                android:id="@+id/previous_btn"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:elevation="@dimen/dp_5"/>
            <View
                android:id="@+id/next_btn"
                android:layout_width="@dimen/dp_60"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:elevation="@dimen/dp_5"/>
            <ImageView
                android:id="@+id/post_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true"
                tools:src="@drawable/sample_post_2"
                android:visibility="gone"/>
            <androidx.media3.ui.PlayerView
                android:id="@+id/videoPlayer_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:longClickable="true"
                android:visibility="visible"
                app:use_controller="false"
                app:show_buffering="when_playing"
                />




        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/controller_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:src="@drawable/messenger_white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_29"
            android:background="@drawable/curved_small_square_box"
            android:layout_toStartOf="@id/share_btn"
            android:layout_toEndOf="@id/like_btn_image"
            android:hint="write something ..."
            android:textColor="@color/black"
            android:paddingHorizontal="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/like_btn_image"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:src="@drawable/heart_inactive_icon_white"
            android:layout_marginStart="@dimen/dp_10"
             />

    </RelativeLayout>

</RelativeLayout>