<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profileFragments.EditBioFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/cancel_button"
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:src="@drawable/cross"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:focusable="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bio"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_23"
                    android:layout_toEndOf="@+id/cancel_button"
                    android:layout_marginHorizontal="@dimen/dp_25"/>
                <ImageView
                    android:id="@+id/save_button"
                    android:layout_width="@dimen/dp_34"
                    android:layout_height="@dimen/dp_34"
                    android:src="@drawable/blue_correct_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dp_15"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/bio_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLength="150"
            android:padding="@dimen/dp_15"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:background="@drawable/curved_rectangularbox_black_outline"
            android:hint="@string/bio"
            android:textColor="@color/black"
            android:textColorHint="@color/DarkGreyText"
            android:layout_marginTop="@dimen/dp_20"

            />
        <TextView
            android:id="@+id/warning_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:layout_below="@+id/characterCount"
            android:textAlignment="textStart"
            android:textColor="@color/warning"
            android:visibility="gone"

            />
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:indeterminateTint="@color/ui_blue"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/characterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/150"
            android:layout_below="@+id/bio_edittext"
            android:layout_alignRight="@+id/bio_edittext"
            android:paddingEnd="5dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:text="@string/name_visibility_info"
            android:layout_above="@+id/learnMore"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/learnMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_14"
            android:text="@string/learn_more"
            android:textColor="@color/terms_color_dark"
            android:clickable="true"
            android:focusable="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            />


    </RelativeLayout>
</LinearLayout>