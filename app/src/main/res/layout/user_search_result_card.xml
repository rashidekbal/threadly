<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/userProfile_img_holder"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        app:cardCornerRadius="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/userProfile_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/test_profile_real"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="@string/profilepic"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/userProfile_img_holder"
        android:paddingHorizontal="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="miaisback"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_1"
            tools:text="username"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/DarkGreyText"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</RelativeLayout>