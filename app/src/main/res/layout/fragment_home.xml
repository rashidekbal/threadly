<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.homeFragment"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_70"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/add_post_image_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_14"
                    android:src="@drawable/camera_icon" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Threadly"
                    android:fontFamily="@font/dancing_script"
                    android:textSize="@dimen/sp_30"
                    android:textColor="@color/black"
                    android:layout_centerInParent="true"
                    />
               <RelativeLayout
                   android:layout_width="@dimen/dp_25"
                   android:layout_height="@dimen/dp_25"
                   android:layout_toLeftOf="@id/msgBtn_holden"
                   android:layout_centerVertical="true"
                   android:layout_marginEnd="@dimen/dp_5"
                   >
                   <ImageView
                       android:id="@+id/notification_btn"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/heart_inactive"
                     />
                   <View
                       android:layout_width="@dimen/dp_8"
                       android:layout_height="@dimen/dp_8"
                       android:background="@drawable/red_dot"
                       android:layout_alignParentEnd="true"
                       android:visibility="gone"
                       android:id="@+id/notification_dot"/>
               </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msgBtn_holden"
                    android:layout_width="@dimen/dp_55"
                    android:layout_height="@dimen/dp_55"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_14"
                    >
                    <ImageView
                        android:id="@+id/MessageBtn"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/messanger"
                        android:layout_centerInParent="true"
                        />
                  <RelativeLayout
                      android:id="@+id/unread_message_counter_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/dp_9"
                      android:layout_marginStart="@dimen/dp_9">
                      <View
                          android:id="@+id/unread_messages_dot"
                          android:layout_width="@dimen/dp_15"
                          android:layout_height="@dimen/dp_15"
                          android:background="@drawable/red_dot"
                         android:layout_centerInParent="true"
                          />
                      <TextView
                          android:id="@+id/unread_messages_counter_text"
                          android:layout_width="@dimen/dp_15"
                          android:layout_height="@dimen/dp_11"
                          tools:text="16"
                          android:textColor="@color/AllWhite"
                         android:layout_centerInParent="true"
                          android:textSize="@dimen/sp_8"
                          android:textAlignment="center"
                          />
                  </RelativeLayout>


                </RelativeLayout>


            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_130"

         >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_132"
                    android:paddingHorizontal="@dimen/dp_10">
                    <LinearLayout
                        android:id="@+id/myStoryLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_132"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:gravity="center_horizontal">
                        <LinearLayout
                            android:id="@+id/myStoryLayoutMain"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <RelativeLayout
                                android:layout_width="@dimen/dp_96"
                                android:layout_height="@dimen/dp_96"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/addStorySymbol"
                                    android:layout_width="@dimen/dp_32"
                                    android:layout_height="@dimen/dp_32"
                                    android:contentDescription="@string/addstory"
                                    android:src="@drawable/plus_circle_filled"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginEnd="@dimen/dp_8"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    android:elevation="2dp"
                                    android:visibility="visible"/>
                                <FrameLayout
                                    android:id="@+id/StoryOuterBorder_color"
                                    android:layout_width="@dimen/dp_90"
                                    android:layout_height="@dimen/dp_90"
                                    android:layout_marginBottom="@dimen/dp_4"
                                    >

                                    <ImageView
                                        android:id="@+id/profile_img"
                                        android:layout_width="@dimen/dp_80"
                                        android:layout_height="@dimen/dp_80"
                                        android:layout_gravity="center"
                                        android:background="@drawable/circle"
                                        android:clipToOutline="true"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/image_test"
                                        />
                                </FrameLayout>


                            </RelativeLayout>
                            <TextView
                                android:id="@+id/MyStoryUsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/addstory"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:textAlignment="center"

                                />

                        </LinearLayout>



                    </LinearLayout>



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/storyRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_toEndOf="@id/myStoryLayout"
                        />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/stories_shimmer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-7dp"
                        android:layout_toEndOf="@+id/myStoryLayout"
                        android:visibility="visible"
                        >

                        <include layout="@layout/stories_shimmer" />
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:alpha="0.1"
                        android:background="#262626" />
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
            <!--shimmer post placeholder-->
            <!--            <include layout="@layout/users_card"/>-->
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/shimmer_post_view" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/posts_recyclerView"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>



</LinearLayout>