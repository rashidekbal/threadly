<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/dp_7"
    android:paddingHorizontal="@dimen/dp_10">
    <androidx.cardview.widget.CardView
        android:id="@+id/profileHolder"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/dp_45">
        <ImageView
            android:id="@+id/User_profile"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/test_profile_real"
            android:contentDescription="@string/profilepic"
            />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/userId_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profileHolder"
        android:layout_toStartOf="@id/postPreviewImgHolder"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_17"
        tools:text="username"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/postPreviewImgHolder"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_5">
        <ImageView
            android:id="@+id/postPreviewImg"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_50"
            android:src="@drawable/image_test"
            android:scaleType="centerCrop"
            android:contentDescription="@string/post_image"
            />
    </androidx.cardview.widget.CardView>


</RelativeLayout>