<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_140"
    android:layout_height="@dimen/dp_185"
    android:background="@drawable/grey_border_5dp_radius"
    android:layout_marginHorizontal="@dimen/dp_5"
    android:layout_marginVertical="@dimen/dp_5"
    >
    <ImageView
        android:id="@+id/userProfile_img"
        android:layout_width="@dimen/dp_80"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_post"
        android:background="@drawable/circle"
        android:clipToOutline="true"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/dp_15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/userProfile_img">
        <TextView
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/black"
            android:textAlignment="center"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/unfollow_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:text="UnFollow"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/slight_round_btn_grey"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/follow_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:text="Follow"
            android:textColor="@color/AllWhite"
            android:background="@drawable/slight_round_btn_blue"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"/>

    </LinearLayout>


</RelativeLayout>