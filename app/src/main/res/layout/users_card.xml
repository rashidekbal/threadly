<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_250"
    android:layout_height="@dimen/dp_305"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/grey_background_5dp_radius"
    android:layout_marginHorizontal="@dimen/dp_5"
    android:layout_marginVertical="@dimen/dp_5"
    android:outlineAmbientShadowColor="@color/DarkGreyText">
    <ImageView
        android:id="@+id/userProfile_img"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_post"
        android:background="@drawable/circle"
        android:clipToOutline="true"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp_20"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/username_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="@dimen/sp_16"
              android:layout_marginBottom="@dimen/dp_5"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/unfollow_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:text="UnFollow"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/slight_round_btn_grey"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:textAllCaps="false"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/follow_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:text="Follow"
            android:textColor="@color/AllWhite"
            android:background="@drawable/slight_round_btn_blue"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_6"
            android:visibility="visible"
            android:textAllCaps="false"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/discardBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:text="@string/requested"
            android:textColor="@color/AllWhite"
            android:background="@drawable/slight_round_btn_grey"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/dp_6"
            android:visibility="gone"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>