<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.settings.UserActivitiesPageActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:paddingHorizontal="@dimen/dp_10"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back_Btn"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@drawable/back_arrow"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_activities"
                        android:textStyle="bold"
                        android:layout_toEndOf="@id/back_Btn"
                        android:layout_marginStart="@dimen/dp_30"
                        android:textSize="@dimen/sp_20"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <!--            header layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/your_activities_header"
                    android:textSize="@dimen/sp_24"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:text="@string/your_activities_page_header"
                    android:textSize="@dimen/sp_18"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <!--    content section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interactions"
                    android:textColor="@color/light_grey_text"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:paddingHorizontal="@dimen/dp_10"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/likes"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/heart_inactive"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="Likes"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icon"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/greater_than"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/comment_icon"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="Comments"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icon2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/greater_than"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/saved"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/save"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="Saved"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icon3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/greater_than"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_5"
                    android:background="@color/light_grey_text"
                    android:layout_marginVertical="@dimen/dp_10"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content You shared"
                    android:textColor="@color/light_grey_text"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_3"
                    android:paddingHorizontal="@dimen/dp_10"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/sharedPosts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:background="?attr/selectableItemBackground"
                    android:paddingHorizontal="@dimen/dp_15">

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="@dimen/dp_25"
                        android:layout_height="@dimen/dp_25"
                        android:src="@drawable/grid_icon_active"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_15"
                        android:text="Posts"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_17"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icon4"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:src="@drawable/greater_than"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>