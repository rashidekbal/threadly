<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:id="@+id/senderProfile"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/circle"
            android:clipToOutline="true"
           tools:src="@drawable/blank_profile"
            android:visibility="visible"
            tools:targetApi="31"
            android:contentDescription="@string/profilepic"/>

      <RelativeLayout
          android:layout_toEndOf="@+id/senderProfile"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dp_10"
          >
          <TextView
              android:id="@+id/rec_text_msg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="@dimen/dp_270"
              android:minWidth="@dimen/dp_40"
              tools:text="b"
              android:layout_alignParentStart="true"
              android:background="@drawable/received_msg_bg"
              android:paddingHorizontal="@dimen/dp_15"
              android:textColor="@color/black"
              android:paddingVertical="@dimen/dp_10"

              />
          <LinearLayout
              android:id="@+id/sent_msg_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_alignParentEnd="true"
              android:gravity="end"
              android:background="@drawable/sent_msg_bg"
              tools:ignore="RelativeOverlap">


              <TextView
                  android:id="@+id/sent_text_msg"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:maxWidth="@dimen/dp_270"
                  android:minWidth="@dimen/dp_40"
                  android:textAlignment="textEnd"
                  tools:text="recieved message this is  so desing it in such way"
                  android:textColor="@color/AllWhite"
                  android:paddingVertical="@dimen/dp_10"
                  android:paddingHorizontal="@dimen/dp_15"/>
              <ImageView
                  android:id="@+id/status_img"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  tools:src="@drawable/msg_pending"
                  android:layout_marginEnd="@dimen/dp_5"
                  android:contentDescription="@string/message_status_icon"
                  />
          </LinearLayout>

      </RelativeLayout>

    </RelativeLayout>
