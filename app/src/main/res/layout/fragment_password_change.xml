<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.settingFragments.Password_change_fragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="4dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/back_Btn"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/back_arrow"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:id="@+id/contentView"
        android:layout_below="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--        main visible layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--            header layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_20"
                android:paddingHorizontal="@dimen/dp_15">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change password "
                    android:textSize="@dimen/sp_28"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:text="password must be at least 6 characters long and should include a combination of numbers, letters and special characters (!%@%)"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_25">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/old_password_field"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:hint="Old password"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingVertical="@dimen/dp_20"
                        android:paddingHorizontal="@dimen/dp_14"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/DarkGreyText"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text_style_2"
                        android:layout_marginBottom="@dimen/dp_12"/>
                    <EditText
                        android:id="@+id/new_password1_field"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:hint="New password"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingVertical="@dimen/dp_20"
                        android:paddingHorizontal="@dimen/dp_14"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/DarkGreyText"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text_style_2"
                        android:layout_marginBottom="12dp"/>
                    <EditText
                        android:id="@+id/new_password2_field"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_62"
                        android:hint="Re-type new password"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:paddingVertical="@dimen/dp_20"
                        android:paddingHorizontal="@dimen/dp_14"
                        android:textSize="@dimen/sp_15"
                        android:textColorHint="@color/DarkGreyText"
                        android:textColor="@color/black"
                        android:background="@drawable/edit_text_style_2"/>
                    <TextView
                        android:id="@+id/msg_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:textColor="#D00707"
                        android:visibility="gone"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/reset_password_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_48"
                            android:text="@string/reset_password"
                            android:background="@drawable/login_btn_background"
                            android:textColor="@color/AllWhite"
                            android:layout_marginTop="@dimen/dp_16"
                            android:textAllCaps="true"
                            android:textSize="@dimen/sp_16"
                            />
                        <ProgressBar
                            android:id="@+id/progressBar"
                            android:layout_width="@dimen/dp_45"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_13"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/AllWhite"
                            android:layout_centerInParent="true"
                            android:elevation="5dp"
                            android:visibility="gone"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/errorMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/danger"
                        android:text="error holder"
                        android:textSize="@dimen/sp_14"
                        android:textAlignment="center"
                        android:layout_marginTop="@dimen/dp_15"
                        android:visibility="gone"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>