<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/top_radius_for_bottom_sheet"
    android:gravity="center_horizontal"
    >
    <View
        android:layout_width="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="4dp"
        android:background="@drawable/bar_appearence"
        />
    <LinearLayout
        android:id="@+id/download_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5"
        >
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/download"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/download"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/archive_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/history_time_clock"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/archived"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/toggle_like_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/heart_inactive"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hide_like_count"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/toggle_share_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/messanger"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/hide_share_count"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/toggle_commenting_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/comment_icon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/turn_off_commenting"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_caption_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/edit_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/edit_caption"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/delete_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_10"
        android:paddingHorizontal="@dimen/dp_5">
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/bin_red"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/delete"
            android:textColor="@color/danger"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="@dimen/dp_15"
            />
    </LinearLayout>


</LinearLayout>